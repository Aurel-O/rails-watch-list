<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12">

      <h2 class="mb-4">
        <em>Nom de ma Liste :</em> <%= @list.name %>
      </h2>

      <h4>Liste des films</h4>

      <div class="row">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-3 mb-4"> <!-- 4 cards par ligne -->
            <div class="card h-100">
              <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "card-img-top movie-img" %>
              <div class="card-body">
                <h5 class="card-title"><%= bookmark.movie.title %></h5>
                <p class="card-text text-muted"><%= bookmark.movie.overview.truncate(100) %></p>
              </div>
              <div class="card-footer">
                <p class="mb-1">ğŸ¬ Note : <%= bookmark.movie.rating %></p>
                <p class="mb-1">ğŸ“ Commentaire : <%= bookmark.comment %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%= link_to "â• Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary mt-4' %>
