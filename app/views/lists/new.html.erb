<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Create a New List</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for @list do |f| %>
            <div class="form-group">
              <%= f.input :name, label: 'List Name', input_html: { class: 'form-control' } %>
            </div>
            <div class="form-group mt-3">
              <%= f.submit '➕ Create List', class: 'btn btn-primary mt-4'  %>
              <%= link_to "⬅️ Back to Lists", lists_path, class: 'btn btn-secondary mt-4' %>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
