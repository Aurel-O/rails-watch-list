<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4">Create a New Bookmark</h2>

      <%= simple_form_for [@list, @bookmark] do |f| %>
        <div class="mb-3">
          <%= f.input :comment, label: "Your Comment", input_html: { class: "form-control" } %>
        </div>
        <div class="mb-3">
          <%= f.association :movie, label: "Select a Movie", input_html: { class: "form-control" } %>
        </div>
        <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
